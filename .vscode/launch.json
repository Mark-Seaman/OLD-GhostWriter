    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "python",
            "request": "launch",
            "program": "manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "runserver",
                "8002"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Django Test",
            "type": "python",
            "request": "launch",
            "program": "manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "test"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Pub Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "pub",
                "script",
                "writer/writer-script.txt"
            ],
            "django": true,
            "justMyCode": true
        },
    ]
}